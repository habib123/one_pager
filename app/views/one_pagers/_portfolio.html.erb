<p style="color: lightskyblue;">Please indicate all the necessary information to generate a portfolio report</p>
<div class="row">
  <div class="span6">
    <%= form_for(@one_pager) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

    	<%= f.label :'Report name: ' %>
  		<%= f.text_field :patent_name, :placeholder => "My Portfolio" ,:class => "masterTooltip" , 
                          :title => "Provide the name for your report" %>

  		<%= f.label :'Patent numbers (comma separated):' %>
  		<%= f.text_area :patent_list, :placeholder => "US6174724B1, US20010002490A1" ,:class => "masterTooltip" , 
                          :title => "Provide the patent numbers for the one pager separated with comma" %>

  		<% if !signed_in? %>

      		<%= f.label :'Your e-mail: ' %>
      		<%= f.text_field :email,:placeholder => "email@example.com" , :class => "masterTooltip" , 
                          :title => "Please introduce your e-mail for us to send the links to download the report" %>



  		<% end %>

  		<%= f.hidden_field :report_type, :value => "portfolio"%>

     	<%= f.submit "Continue to step 3", class: "btn btn-primary"  %>
    <% end %>

    
  </div>
</div>
