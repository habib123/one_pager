

<div class="row">
<div class="user-layout">
  <div class="body-part">
	    <div class="title-top">
		<span class="title"> MIG Approval</span>
	    </div>
    <div class="middle-part">
	       <p style = "color:blue"> Patent Report Request :  <a href="/mig_signup"> Sign Up </a> 
		<%= link_to "Sign out", mig_signout_path, method: "delete" %> </p>
	<div class="row">
		<div class="span12 ">
			<div class="row-fluid offset0">
			    <div class="span4 "  style="padding-top: 15px;">
				<table class="table table-striped"  >
					<tr>
					<td><b>Name</b></td>
					<td><%=@one_pager.patent_name%></td>
					</tr>
	
					<tr>
					<td><b>Status</b></td>
					<% if (@one_pager.mig_status == "Approve") %>
					<td style = "color:green"><%=@one_pager.mig_status%></td>
					<% else %>
					<td style = "color:orange"><%=@one_pager.mig_status%></td>
					<% end %>
					</tr>

					<tr>
					<td><b>Type</b></td>
					<td><%=@one_pager.type%></td>
					</tr>

					<tr>
					<td><b>Patent</b></td>
					<td><%= OnePagersPatentNum.get_patent_list(@one_pager.id)%></td>
					</tr>

				</table> 
			    </div>
			 
			    <div class="span7 offset1">
				  <%= form_for(@one_pager) do |f| %>
				      <%= f.label :comments %>
				       <%= f.text_area :comments, :id => "message_area", :cols => 20, :rows => 5 %>
				      <div class="control-group">
					 <div class="controls">
					    <%= f.submit 'Approve' , class: "btn btn-success" %>
					    <%= f.submit 'Deny' , class: "btn btn-danger"%>  	
					  </div>
					</div>
				    <% end %>
			    </div>
			</div>
		    </div>
	</div>
    </div>
  </div>
 </div>
</div>




