<%= stylesheet_link_tag "style.css" %>
<%= javascript_include_tag "jquery-latest.js" %>
<%= javascript_include_tag "jquery.tablesorter.min.js" %>
<div class="search-wrapper">
<h3 style="color: lightskyblue;">Search Reports</h3>	
<p style="float: right;">If you are not happy with the results, you can always <a href="/search/search">search again</a>.
</p>
<table class="table table-striped tablesorter" id="table-sorter">
    <thead>
      <tr>
        <th>Type</th>
        <th>Name</th>
        <th>Patent Numbers</th>
        <th>Date added</th>
        <th>HTML</th>
        <th>PDF</th>
        <th>Favorite</th>
      </tr>
    </thead>
    <tbody>
   	  <% @result.each do |patent|%>	 	
      <tr>
        <td><%= patent.type %></td>
        <td><%= patent.patent_name %></td>
        <td><%= patent.single_patent_num %></td>
        <td><%= patent.created_at %></td>
        <td><a href="<%= patent.html_link %>" target="_blank">Download HTML Version</a></td>
        <td><a href="<%= patent.pdf_link %>" target="_blank">Download PDF Version</a></td>
        <td style="text-align: center;"><img src="/Crystal_Clear.png" height="15" width="15"></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @result %>
</div>

<script>
	$(document).ready(function() 
	    { 
	        $("#table-sorter").tablesorter({sortList: [[0,0]], headers: { 4:{sorter: false}, 5:{sorter: false}, 6:{sorter: false}}}); 
	    } 
	); 
</script>
